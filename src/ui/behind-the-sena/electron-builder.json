{
  "extends": null,
  "files": ["dist/**/*", "dist-main/**/*", "node_modules/**/*"],
  "directories": {
    "buildResources": "assets"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/sena-logo.ico"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "assets/sena-logo.png",
    "category": "public.app-category.productivity"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/sena-logo.png",
    "category": "Utility"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Sena",
    "installerIcon": "assets/sena-logo.ico",
    "uninstallerIcon": "assets/sena-logo.ico",
    "installerHeaderIcon": "assets/sena-logo.ico"
  },
  "portable": {
    "artifactName": "Sena.exe"
  }
}
